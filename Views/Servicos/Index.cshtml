@model IEnumerable<ProjetoBackend.Models.Servico>

@{
    ViewData["Title"] = "Index";
}

<h1>Serviços</h1>

<p></p>
<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorServico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorServico)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ServicoId">Editar</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ServicoId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
